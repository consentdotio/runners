{
  "name": "runners",
  "version": "0.0.0",
  "description": "A small SDK for writing Playwright tests that can be executed by an API orchestrator or a local CLI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    }
  },
  "bin": {
    "runners": "./cli.js"
  },
  "files": [
    "dist",
    "cli.js"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@runners/config": "workspace:*",
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@runners/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@runner/cli": "*"
  },
  "peerDependenciesMeta": {
    "@runner/cli": {
      "optional": true
    }
  }
}
