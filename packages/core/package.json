{
  "name": "runners",
  "version": "0.0.0",
  "description": "A small SDK for writing Playwright tests that can be executed by an API orchestrator or a local CLI",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./core": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "runners": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "dev": "rslib build --watch",
    "fmt": "pnpm biome format --write .",
    "lint": "pnpm biome lint ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@runners/config": "workspace:*",
    "comment-json": "^4.4.1",
    "find-up": "^7.0.0",
    "glob": "^11.0.0",
    "playwright": "^1.48.0"
  },
  "devDependencies": {
    "@runners/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "@runner/cli": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@runner/cli": {
      "optional": true
    }
  }
}
