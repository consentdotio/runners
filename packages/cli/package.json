{
  "name": "@runner/cli",
  "version": "0.0.0",
  "description": "Command-line interface for runners",
  "license": "MIT",
  "type": "module",
  "exports": "./dist/index.mjs",
  "main": "./dist/index.mjs",
  "module": "dist/index.mjs",
  "bin": {
    "runner": "dist/index.mjs",
    "runners": "dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "check-types": "tsc --noEmit",
    "dev": "rslib build --watch",
    "fmt": "pnpm biome format --write .",
    "knip": "knip",
    "lint": "pnpm biome lint ./src",
    "start": "node ./dist/index.mjs",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "@runners/config": "workspace:*",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.0",
    "package-manager-detector": "^1.3.0",
    "picocolors": "^1.1.1",
    "runners": "workspace:*",
    "typescript": "catalog:",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@runners/tsconfig": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public",
    "executableFiles": [
      "./dist/index.mjs"
    ]
  }
}
