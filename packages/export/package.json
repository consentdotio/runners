{
  "name": "runners",
  "version": "0.0.0",
  "description": "A small SDK for writing Playwright tests that can be executed by an API orchestrator or a local CLI",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.mjs"
    },
    "./nitro": {
      "types": "./dist/nitro.d.ts",
      "default": "./dist/nitro.mjs"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "default": "./dist/errors.mjs"
    },
    "./http": {
      "types": "./dist/http.d.ts",
      "default": "./dist/http.mjs"
    },
    "./playwright": {
      "types": "./dist/playwright.d.ts",
      "default": "./dist/playwright.mjs"
    },
    "./orchestrator": {
      "types": "./dist/orchestrator.d.ts",
      "default": "./dist/orchestrator.mjs"
    },
    "./nitro-orchestrator": {
      "types": "./dist/nitro-orchestrator.d.ts",
      "default": "./dist/nitro-orchestrator.mjs"
    }
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "runners": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "dev": "rslib build --watch",
    "fmt": "pnpm biome format --write .",
    "lint": "pnpm biome lint ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@runners/cli": "workspace:*",
    "@runners/config": "workspace:*",
    "@runners/core": "workspace:*",
    "@runners/errors": "workspace:*",
    "@runners/http": "workspace:*",
    "@runners/nitro": "workspace:*",
    "@runners/nitro-orchestrator": "workspace:*",
    "@runners/orchestrator": "workspace:*",
    "@runners/playwright": "workspace:*"
  },
  "devDependencies": {
    "@runners/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
