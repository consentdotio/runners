{
  "name": "@runners/config",
  "version": "0.0.0",
  "description": "Configuration support for runners",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rslib build",
    "clean": "tsc --build --clean && rm -r dist ||:",
    "dev": "rslib build --watch",
    "fmt": "pnpm biome format --write .",
    "lint": "pnpm biome lint ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "catalog:"
  },
  "devDependencies": {
    "@runners/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "typescript": "catalog:"
  }
}
